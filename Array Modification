#include <iostream>
using namespace std;


void updateArray(int arr[], int &startValue) {
    for (int i = 0; i < 5; i++) {
        arr[i] = startValue++;
    }
}

int main() {
    int start;
    int arr[5] = {10, 20, 30, 40, 50};

    cout << "Enter a number: ";
    cin >> start;

    cout << "Before update: ";
    for (int i = 0; i < 5; i++) {
        cout << arr[i] << " ";
    }

    updateArray(arr, start);

    cout << "\nAfter update: ";
    for (int i = 0; i < 5; i++) {
        cout << arr[i] << " ";
    }

    return 0;
}



EXPECTED OUTPUT :

Enter the number: 5
Before: 10 20 30 40 50 
After: 5 6 7 8 9
